{
    "manifest_version": 3,
    "name": "Poster Buddy",
    "description": "Voice-based posture reminders with Tamil & English support",
    "version": "1.0.0",

    "permissions": [
        "storage",
        "alarms",
        "tts"
    ],

    "background": {
        "service_worker": "background.js"
    },

    "action": {
        "default_popup": "popup.html"
    }
}